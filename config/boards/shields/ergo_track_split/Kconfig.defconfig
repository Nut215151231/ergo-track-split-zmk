if SHIELD_ERGO_TRACK_SPLIT_LEFT

config ZMK_KEYBOARD_NAME
    default "Ergo Track Split"

config ZMK_SPLIT_ROLE_CENTRAL
    default y

endif

if SHIELD_ERGO_TRACK_SPLIT_RIGHT

config ZMK_KEYBOARD_NAME
    default "Ergo Track Split"

# Enable PMW3610 trackball driver for right side
config PMW3610
    default y
    select SPI
    select INPUT

endif

if SHIELD_ERGO_TRACK_SPLIT_LEFT || SHIELD_ERGO_TRACK_SPLIT_RIGHT

config ZMK_SPLIT
    default y

endif